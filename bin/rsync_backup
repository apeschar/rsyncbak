#!/bin/bash

set -euo pipefail
cd "$(dirname "$0")/.."

source "etc/rsync_backup.defaults"
source "etc/rsync_backup"

bin/rsync-no-vanished \
    $rsync_opts \
    -a --numeric-ids --rsync-path="rsync --fake-super" \
    --delete --delete-excluded \
    --one-file-system \
    --exclude-from etc/rsync_exclude \
    / "${dest}mirror/"
