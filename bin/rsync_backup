#!/bin/bash

set -euo pipefail
app="$(cd "$(dirname "$0")/.." && pwd)"

rsync_opts=""
if [[ -t 1 ]]; then
    rsync_opts="-v"
fi

source "$app/etc/rsync_backup"

cd /

"$app/bin/rsync-no-vanished" \
    $rsync_opts \
    -a --numeric-ids --rsync-path="rsync --fake-super" \
    --delete --delete-excluded \
    --one-file-system \
    --exclude-from "$app/etc/rsync_exclude" \
    / "${dest}mirror/"
