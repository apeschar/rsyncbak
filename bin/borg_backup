#!/usr/bin/env bash

set -euo pipefail
cd "$(dirname "$0")/.."

source "etc/rsync_backup.defaults"
source "etc/rsync_backup"

remote="${dest%%:*}"
dir="${dest#*:}"
if [[ $dir != "" ]]; then
	dir="$dir/"
fi

repo="$remote:${dir}borg"

init=

while [[ $# -gt 0 ]]; do
	case $1 in
		--init)
			shift
			init=1
			;;
		*)
			echo "Usage: $0 [--init]" >&2
			exit 1
			;;
	esac
done

export BORG_PASSPHRASE=
export BORG_REMOTE_PATH=borg1

if [[ $init -eq 1 ]]; then
	borg init -e authenticated-blake2 "$repo"
	echo "Repo initalized. Rerun this command without --init or use the systemd unit." >&2
	exit 0
fi

borg create \
	--filter=AME \
	--compression zstd \
	--stats \
	--one-file-system \
	--list \
	--exclude-from etc/rsync_exclude \
	"$repo::daily-{now}" \
	/

borg prune \
	--keep-within=7d \
	--keep-weekly=8 \
	--prefix=daily- \
	"$repo"

ssh "$remote" "touch ${dir}borg.ok"
